<import src="../components/template.wxml" />

<view class="yx-statusbar" style="height:{{ top }}px;" />
<view class="yx-host" style="top:{{ top }}px;" 
    bindtouchstart="handleEvent"
    bindtouchmove="handleEvent"
    bindtouchcancel="handleEvent"
    bindtouchend="handleEvent"
    bindtouchforcechange="handleEvent"
    bindtap="handleEvent"
    bindlongpress="handleEvent"
    bindtransitionend="handleEvent"
    bindanimationstart="handleEvent"
    bindanimationiteration="handleEvent"
    bindanimationend="handleEvent">
    <template wx:if="{{ d }}" is="{{ d.t }}" data="{{ ...d }}" />
</view>
