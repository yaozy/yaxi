<template name="Text">

    <text
        data-id="{{ u }}"
        id="{{ id }}"
        class="yx-control yx-text{{ active }}{{ class }}" 
        style="{{ style || '' }}"
        decode
        bindtouchstart="handleEvent">{{ text }}</text>

</template>


<template name="TextBox">

    <input
        type="{{ type || 'text' }}"
        data-id="{{ u }}"
        id="{{ id }}"
        class="yx-control yx-textbox{{ active }}{{ class }}"
        style="{{ style || '' }}"
        value="{{ value || '' }}"
        placeholder="{{ placeholder || '' }}"
        disabled="{{ disabled }}"
        maxlength="{{ maxlength == null ? -1 : maxlength }}"
        focus="{{ focus }}"
        confirm-type="{{ confirmType || 'done' }}"
        confirm-hold="{{ confirmHold }}"
        selection-start="{{ selectionStart }}"
        selection-end="{{ selectionEnd }}"
        adjust-position="{{ adjustPosition }}"
        hold-keyboard="{{ holdKeyboard }}"
        bindtouchstart="handleEvent"
        bindinput="translateEvent"
        bindchange="translateEvent"
        bindfocus="translateEvent"
        bindblur="translateEvent"
        bindconfirm="translateEvent"
        bindkeyboardheightchange="translateEvent" />

</template>


<template name="Button">

    <box
