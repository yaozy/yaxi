        <view data-id="{{ u }}" class="yx-marquee-content" style="animation:{{ animation || '' }}">
            <text data-id="{{ u }}" style="margin-right:100rpx;">{{ text || '' }}</text>
            <text data-id="{{ u }}" style="margin-right:100rpx;">{{ text || '' }}</text>
        </view>
    </view>

</template>
