        bindtouchstart="translateEvent">
        <view 
            data-id="{{ u }}" 
            data-flag="back"
            class="yx-header-back iconfont icon-common-back" 
            style="{{ back ? '' : 'display:none;' }}" />
        <view 
            data-id="{{ u }}"
            data-flag="icon"
            class="{{ icon ? 'yx-header-icon ' + icon : '' }}"
            style="{{ icon ? '' : 'display:none;' }}" />
        <box 
            data-id="{{ u }}" 
            data-flag="content"
            class="yx-header-host"
            children="{{ c }}"
            bind:touchstart="translateEvent" />
    </view>

</template>



