</template>


<template name="Swiper">

    <view data-id="{{ u }}"
        id="{{ id }}"
        class="yx-control yx-box yx-swiper{{ active }}{{ class }}" 
        style="{{ style || '' }}">
        <swiper 
            data-id="{{ u }}"
            class="yx-swiper-host"
            autoplay="{{ false }}"
            current="{{ current || 0 }}"
            interval="{{ interval || 5000 }}"
            duration="{{ duration || 500 }}"
            circular="{{ circular !== false }}"
            vertical="{{ vertical }}"
            previous-margin="{{ before }}"
            next-margin="{{ after }}"
            bindchange="translateEvent"
            bindtouchstart="handleEvent">
            <swiper-item 
                wx:for="{{ c }}"
                wx:key="u"
                item-id="{{ item.uuid }}"
                class="yx-swiper-item">
                <template
                    is="{{ item.t }}"
                    data="{{ ...item }}" />
            </swiper-item>
        </swiper>
        <view class="yx-swiper-dots" wx:if="{{ dots !== false }}">
            <view 
                wx:for="{{ c }}"
                wx:key="u"
                data-id="{{ u }}" 
                data-flag="{{ index }}" 
                class="yx-swiper-dot{{ (current || 0) === index ? ' yx-swiper-active-dot' : ''}}"
                style="{{ ((current || 0) === index ? activeDotStyle : dotStyle) || '' }}" />
        </view>
    </view>

</template>


