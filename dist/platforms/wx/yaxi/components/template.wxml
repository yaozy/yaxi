<template name="Swiper">

    <view data-id="{{ u }}"
        id="{{ u }}"
        class="yx-control yx-box yx-swiper{{ class }}" 
        style="{{ s || '' }}{{ hidden ? 'display:none;' : '' }}"
        bindtouchstart="translateEvent">
        <swiper 
            data-id="{{ u }}"
            class="yx-swiper-host"
            autoplay="{{ autoplay !== false }}"
            current="{{ current || 0 }}"
            interval="{{ interval || 5000 }}"
            duration="{{ duration || 500 }}"
            circular="{{ circular !== false }}"
            vertical="{{ vertical }}"
            previous-margin="{{ before }}"
            next-margin="{{ after }}"
            bindchange="translateEvent">
            <swiper-item 
                wx:for="{{ c }}"
                wx:key="u"
                key="index"
                data-id="{{ item.u }}" 
                item-id="{{ item.u }}"
                class="yx-swiper-item">
                <template is="{{ item.t }}" data="{{ ...item }}" />
            </swiper-item>
        </swiper>
        <view class="yx-swiper-dots" wx:if="{{ dots !== false }}">
            <view 
                wx:for="{{ c }}"
                wx:key="u"
                key="index"
                data-id="{{ u }}" 
                data-flag="{{ index }}" 
                class="yx-swiper-dot{{ (current || 0) === index ? ' yx-swiper-active-dot' : ''}}"
                style="{{ ((current || 0) === index ? activeDotStyle : dotStyle) || '' }}" />
        </view>
    </view>

</template>


