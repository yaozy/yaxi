        <view class="{{ icon ? 'yx-iconbutton-icon iconfont icon-' + icon : '' }}" data-id="{{ u }}" />
        <box class="yx-iconbutton-content" data-id="{{ u }}" children="{{ c }}" />
    </view>

</template>


